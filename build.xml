<project name="BFST" default="dist" basedir="." xmlns:jacoco="antlib:org.jacoco.ant">
    <property name="tests" location="tests"/>
    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="dist" location="out"/>

    <taskdef uri="antlib:org.jacoco.ant" resource="org/jacoco/ant/antlib.xml">
        <classpath path="lib/jacocoant.jar"/>
    </taskdef>


    <path id="build.path">
        <!-- None so far -->
    </path>

    <path id="test.path">
        <pathelement location="lib/junit-4.12.jar"/>
    </path>

    <target name="compile" description="compile the source" depends="clean">
        <mkdir dir="${build}"/>
        <mkdir dir="${build}/tests"/>

        <javac srcdir="${src}" destdir="${build}" includeantruntime="false" classpathref="build.path" />
        <javac srcdir="${tests}" destdir="${build}/tests" includeantruntime="true" classpathref="test.path" />

        <jar destfile="${dist}/BFST.jar" basedir="${build}">
            <manifest>
                <attribute name="Main-Class" value="Main"/>
            </manifest>
        </jar>
    </target>

    <target name="test" depends="compile">
        <junit printsummary="true" haltOnFailure="true" haltOnError="true" showoutput="true" outputtoformatters="true" fork="true">
            <batchtest filtertrace="false" fork="yes">
                <formatter type="plain" usefile="false"/>
                <fileset dir="tests" includes="*.java"/>
            </batchtest>
            <classpath>
                <pathelement location="./lib/junit-4.12.jar"/>
                <pathelement location="./lib/hamcrest-core-1.3.jar"/>
                <pathelement location="${build}/tests"/>
            </classpath>
        </junit>
    </target>
    <target name="coverage" depends="compile">
        <jacoco:coverage destfile="${dist}/jacoco.exec">
            <junit fork="true" forkmode="once" haltOnFailure="true" haltOnError="true">
                <batchtest fork="yes">
                    <fileset dir="tests" includes="*.java"/>
                </batchtest>
                <classpath>
                    <pathelement location="./lib/junit-4.12.jar"/>
                    <pathelement location="./lib/hamcrest-core-1.3.jar"/>
                    <pathelement location="${build}/tests"/>
                </classpath>
            </junit>
        </jacoco:coverage>
    </target>
    <target name="report" depends="coverage">
        <jacoco:report>
            <executiondata>
                <file file="${dist}/jacoco.exec"/>
            </executiondata>
            <!--  the class files and optional source files ...  -->
            <structure name="JaCoco">
                <classfiles>
                    <fileset dir="${dist}"/>
                </classfiles>
                <sourcefiles encoding="UTF-8">
                    <fileset dir="src"/>
                </sourcefiles>
            </structure>
            <xml destfile="${dist}/jacoco.xml"/>
        </jacoco:report>
    </target>

    <target name="clean"
            description="clean up">
        <!-- Delete the ${build} and ${dist} directory trees -->
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>
</project>